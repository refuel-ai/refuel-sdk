{
    "compilerOptions": {
        "target": "ES2015",
        "module": "ESNext",
        "declaration": true,
        "declarationDir": "dist/types",
        "outDir": "dist",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"]
}
